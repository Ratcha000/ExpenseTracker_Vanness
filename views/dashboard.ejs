<%- include('partials/header') %>

<div class="container my-4">

  <!-- Header -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-body d-flex justify-content-between align-items-center">
      <h4 class="fw-bold mb-0">Dashboard รายจ่าย</h4>
      <a href="/expense/new" class="btn btn-success">
        + รายจ่าย
      </a>
    </div>
  </div>

  <!-- Search -->
  <div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
      <form method="GET" action="/dashboard" class="row g-3">
        <div class="col-md-4">
          <label class="form-label">วันที่เริ่มต้น</label>
          <input type="date" name="start" class="form-control" value="<%= query.start || '' %>">
        </div>

        <div class="col-md-4">
          <label class="form-label">วันที่สิ้นสุด</label>
          <input type="date" name="end" class="form-control" value="<%= query.end || '' %>">
        </div>

        <input type="hidden" name="sort" value="<%= query.sort || 'date_desc' %>">

        <div class="col-md-4 d-flex align-items-end gap-2">
          <button class="btn btn-primary w-100">ค้นหา</button>

          <% if (query.start || query.end) { %>
            <a href="/dashboard" class="btn btn-outline-secondary w-100">
              ล้าง
            </a>
          <% } %>
        </div>
      </form>
    </div>
  </div>

  <!-- Sort + Total -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body">
          <h6 class="fw-bold mb-3">เรียงตาม</h6>

          <% const sorts = [
            ['date_desc','วันที่ล่าสุด'],
            ['date_asc','วันที่เก่าสุด'],
            ['amount_desc','จำนวนเงินมาก → น้อย'],
            ['amount_asc','จำนวนเงินน้อย → มาก']
          ]; %>

          <% sorts.forEach(s => { %>
            <div class="form-check">
              <input class="form-check-input sort-radio" type="radio" value="<%= s[0] %>"
                <%= (!query.sort && s[0]==='date_desc') || query.sort===s[0] ? 'checked' : '' %>>
              <label class="form-check-label"><%= s[1] %></label>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm border-0 bg-success text-white h-100">
        <div class="card-body text-center">
          <h6 class="mb-2">ยอดรวมทั้งหมด</h6>
          <h2 class="fw-bold">
            <%= totalAmount.toLocaleString() %> บาท
          </h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Table -->
  <div class="card shadow-sm border-0">
    <div class="card-body p-0">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>วันที่</th>
             <th>เวลา</th>
            <th>รายการ</th>
            <th>หมวดหมู่</th>
            <th class="text-end">จำนวนเงิน</th>
          </tr>
        </thead>
       <tbody>
  <% expenses.forEach(e => { %>
    <tr>
      <!-- วันที่ -->
      <td>
        <%= e.createdAt.toLocaleDateString('th-TH', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit'
        }) %>
      </td>

      <!-- เวลา -->
      <td>
        <%= e.createdAt.toLocaleTimeString('th-TH', {
          hour: '2-digit',
          minute: '2-digit'
        }) %>
      </td>

      <td><%= e.title %></td>

      <td><%= e.category ? e.category.name : '-' %></td>

      <td class="text-end">
        <%= e.amount.toLocaleString() %>
      </td>
    </tr>
  <% }) %>
</tbody>
      </table>
    </div>
  </div>

</div>

<script>
  document.querySelectorAll('.sort-radio').forEach(radio => {
    radio.addEventListener('change', () => {
      const params = new URLSearchParams(window.location.search);
      params.set('sort', radio.value);
      window.location.search = params.toString();
    });
  });
</script>

<%- include('partials/footer') %>
